<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.DashboardFragment">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#beeebe"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profileIV"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_profile_black_24dp" />

        <TextView
            android:id="@+id/signinTV"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:text="Sign In"
            android:textColor="#253e50"
            android:textSize="25dp" />

    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/settingsIV"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_settings_black_24dp" />

        <TextView
            android:id="@+id/settingsTV"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:text="Settings"
            android:textColor="#253e50"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/rateusIV"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_rate_us_black_24dp" />

        <TextView
            android:id="@+id/rateusTV"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:text="Rate Us"
            android:textColor="#253e50"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/aboutusIV"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/about_us" />

        <TextView
            android:id="@+id/aboutusTV"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:text="About Us"
            android:textColor="#253e50"
            android:textSize="20dp" />

    </LinearLayout>



</LinearLayout>